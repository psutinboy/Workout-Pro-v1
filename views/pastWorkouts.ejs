<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Past Workouts</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>Past Workouts</h1>
      <div class="workouts-container">
        <% if (workouts.length > 0) { %>
          <% workouts.forEach(workout => { %>
            <div class="workout">
              <h2><%= workout.title || 'Untitled Workout' %></h2>
              <p><%= workout.description || 'No description available.' %></p>
              <p>Date: <%= workout.createdAt.toDateString() %></p>
            </div>
          <% }) %>
        <% } else { %>
        <p>No past workouts found.</p>
        <% } %>
      </div>
    </div>
    <%- include('partials/nav.ejs') %>
  </body>
</html>
