<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account Settings</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/settings.css">
  <link rel="stylesheet" href="/css/nav.css">
</head>
<body>
  <div class="content">
    <h1>Account Settings</h1>
    
    <!-- Flash message display -->
    <% if (message.length > 0) { %>
      <div class="alert alert-success"><%= message %></div>
    <% } %>

    <!-- Display current user information -->
    <div class="current-info">
      <h2>Current Information</h2>
      <p><strong>Username:</strong> <span id="current-username"><%= user.username %></span></p>
      <p><strong>Email:</strong> <span id="current-email"><%= user.email %></span></p>
    </div>
    
    <!-- Form to update user information -->
    <form id="settingsForm" action="/settings/update" method="POST">
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" class="form-control" value="<%= user.username %>">
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>">
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" class="form-control">
      </div>
      
      <!-- Timezone Section -->
      <div class="timezone-section">
        <h2>Time Zone Settings</h2>
        <div class="form-group">
          <label for="timezone">Select Your Time Zone:</label>
          <select name="timezone" id="timezone" class="form-control">
            <option value="">Select Timezone</option>
            <!-- Timezones will be populated via JavaScript -->
          </select>
        </div>
      </div>

      <button type="submit" class="primary-button">Update Settings</button>
    </form>

    <h2>Data Privacy</h2>
    <form action="/settings/delete" method="post">
      <button type="submit" class="danger">Delete Account</button>
    </form>
    <form action="/logout" method="get">
      <button type="submit" class="logout">Log Out</button>
    </form>
  </div>
  <%- include('partials/nav.ejs') %>
  <script src="/js/settings.js"></script>
</body>
</html>
